package com.wipro.fooddeliveryapp.menu.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

@FeignClient(name = "RESTAURANT-SERVICE") // Name from restaurant service's spring.application.name
public interface RestaurantClient {

    @GetMapping("/api/v1/restuarant/getById/{id}")
    RestaurantDTO getRestaurantById(@PathVariable("id") Long id);
}